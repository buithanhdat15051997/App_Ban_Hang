<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_margin="9dp"
        app:cardBackgroundColor="#F7F6F6"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/noimage"
                android:layout_margin="5dp"
                android:id="@+id/imgLaptopSP"
                android:layout_width="110dp"
                android:layout_height="110dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                android:textSize="22sp"
                    android:layout_margin="5dp"
                    android:text="TÃªn laptop"
                    android:textStyle="bold"
                    android:textColor="#43A047"
                    android:id="@+id/txttenlaptop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="italic"
                    android:layout_margin="5dp"
                    android:id="@+id/txtgialaptop"
                    android:textColor="#EE472A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gia san pham"
                    android:textSize="18sp"/>
                <TextView
                    android:textColor="#111111"
                    android:layout_margin="5dp"
                    android:id="@+id/txtmotalaptop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mo ta san pham"
                    android:textSize="22sp"/>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>