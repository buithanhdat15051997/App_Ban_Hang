<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ChiTietSanPhamActivity">
   <android.support.v7.widget.Toolbar
       android:id="@+id/toolbarChitietSP"
       android:background="@color/color_background"
       app:titleTextColor="#F3F3F3"
       app:titleMarginStart="50dp"
       app:title="Chi tiết sản phẩm"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize">
   </android.support.v7.widget.Toolbar>
   <LinearLayout
       android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imgchitiet"
          android:src="@drawable/noimage"
          android:layout_margin="9dp"
          android:layout_width="150dp"
          android:layout_height="200dp" />
      <LinearLayout
          android:layout_marginRight="9dp"
          android:layout_marginTop="9dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txttenchitiet"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Tên sản phẩm"
             android:textSize="22sp"
             android:textColor="#D81B60"
             android:textStyle="bold"/>

         <TextView
             android:textStyle="italic"
             android:id="@+id/txtgiachitiet"
                android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:text="Giá"
             android:textColor="#E53935"
             android:textSize="22sp" />
         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"/>
         <Spinner
             android:background="#976D6D6A"
             android:popupBackground="#585858"
             android:padding="10dp"
             android:id="@+id/spinner"
             android:textAlignment="center"
             android:layout_margin="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="22sp"
             />
         </LinearLayout>
         <Button
             android:id="@+id/btnthem"
             android:layout_width="wrap_content"
             android:layout_height="32dp"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
             android:background="@drawable/btn_them_shape"
             android:text="Thêm vào giỏ"
             android:padding="5dp"
             android:textColor="#F4511E"
             android:textSize="12sp"
             android:textStyle="bold" />
      </LinearLayout>
   </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          android:layout_margin="5dp"
          android:textColor="#69693E"
          android:textSize="22sp"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Mô tả sản phẩm :"/>
   <TextView
       android:layout_margin="9dp"
       android:textColor="#3949AB"
       android:textSize="22sp"
       android:textStyle="italic"
       android:id="@+id/txtmotachitiet"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   </LinearLayout>

</LinearLayout>