<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".controller.GioHangActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarGioHangSP"
        android:background="@color/color_background"
        app:titleTextColor="#F3F3F3"
        app:titleMarginStart="50dp"
        app:title="Giỏ hàng"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
            <TextView
                android:id="@+id/textviewThongBao"
                android:gravity="center"
                android:textSize="32sp"
                android:text=" Giỏ hàng đang trống"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/listviewGioHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
        <TextView
            android:textColor="#E64A19"
            android:textSize="22sp"
            android:text="Tổng tiền:"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtTongTien"
            android:textColor="#FF0000"
            android:textSize="22sp"
            android:text="1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <Button
        android:id="@+id/btnThanhtoan"
        android:layout_margin="3dp"
        android:textColor="#F3F3F3"
        android:background="@drawable/btn_loaisp_shape"
        android:text="Thanh toán"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:layout_margin="3dp"
        android:id="@+id/btnNext"
        android:textColor="#F3F3F3"
        android:background="@drawable/btn_loaisp_shape"
        android:text="Tiếp tục mua hàng"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
    </Button>
    </LinearLayout>
</LinearLayout>