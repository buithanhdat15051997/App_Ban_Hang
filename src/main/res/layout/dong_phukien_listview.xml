<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="15dp"
        android:background="#B3B3AE"
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#F7F7F2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/imgphukien"
                android:src="@drawable/noimage"
                android:layout_width="110dp"
                android:layout_height="110dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/txttenphukien"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ten san pham"
                android:textSize="22sp"/>
            <TextView
                android:textStyle="italic"
                android:layout_margin="5dp"
                android:id="@+id/txtgiaphukien"
                android:textColor="#EE472A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gia san pham"
                android:textSize="18sp"/>
            <TextView
                android:textColor="#111111"
                android:layout_margin="5dp"
                android:id="@+id/txtmotaphukien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mo ta san pham"
                android:textSize="22sp"/>
        </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>